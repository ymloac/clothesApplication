<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/key"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tvNoOfFollowing"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="236"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tvNoOfFollower"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="100"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/tvNoOfFollowing"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tvNoOfPosts"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="78"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/tvNoOfFollower"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tvFollowering"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="followering"
        android:textSize="10sp"
        android:layout_alignTop="@+id/tvFollower"
        android:layout_toRightOf="@+id/tvFollower"
        android:layout_toEndOf="@+id/tvFollower" />

    <TextView
        android:id="@+id/tvFollower"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="followers"
        android:textSize="10sp"
        android:layout_toLeftOf="@+id/tvNoOfFollowing"
        android:layout_marginRight="15dp"
        android:layout_below="@id/tvNoOfFollower"
        />

    <TextView
        android:id="@+id/tvPosts"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="posts"
        android:textSize="10sp"
        android:layout_toLeftOf="@+id/tvNoOfFollower"
        android:layout_marginRight="15dp"
        android:layout_below="@id/tvNoOfPosts"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="Edit Profile"
        android:layout_below="@id/tvPosts"
        android:textSize="10sp"
        android:layout_alignLeft="@id/tvPosts"/>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProfilePicture"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_alignParentBottom="true"
        android:minHeight="?attr/actionBarSize" />

</RelativeLayout>

